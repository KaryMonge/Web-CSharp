@model Proyecto1_web.Models.Product

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product_Id" class="control-label">Id del producto</label>
                <input asp-for="Product_Id" class="form-control" />
                <span asp-validation-for="Product_Id" class="text-danger">Id del producto</span>
            </div>
            <div class="form-group">
                <label asp-for="Product_Descrition" class="control-label">Descripción del producto</label>
                <input asp-for="Product_Descrition" class="form-control" />
                <span asp-validation-for="Product_Descrition" class="text-danger">Descripción del producto</span>
            </div>
            <div class="form-group">
                <label asp-for="Year_in" class="control-label">Año de ingreso</label>
                <input asp-for="Year_in" class="form-control" />
                <span asp-validation-for="Year_in" class="text-danger">Año de ingreso</span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Precio del producto</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger">Precio del producto</span>
            </div>
            <div class="form-group">
                <label asp-for="Utility" class="control-label">Porcentaje de la utilidad</label>
                <input asp-for="Utility" class="form-control" />
                <span asp-validation-for="Utility" class="text-danger">Porcentaje de la utilidad</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

