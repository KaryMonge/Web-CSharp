@model Proyecto1_web.Models.Supplier

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Proveedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Legal_Doc" class="control-label">Cédula Jurídica</label>
                <input asp-for="Legal_Doc" class="form-control" />
                <span asp-validation-for="Legal_Doc" class="text-danger">Cédula Jurídica</span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier_Description" class="control-label">Descripción</label>
                <input asp-for="Supplier_Description" class="form-control" />
                <span asp-validation-for="Supplier_Description" class="text-danger">Descripción</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

